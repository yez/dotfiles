source .colors

git_branch_name() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

DELIM_COLOR=$txtwht
TIME_COLOR=$txtgrn
DIR_COLOR=$txtblu
GIT_BRANCH_COLOR=$txtcyn

PS1="\[$TIME_COLOR\]\t \[$DELIM_COLOR\]| \[$DIR_COLOR\]\W \[$DELIM_COLOR\]|\[$GIT_BRANCH_COLOR\]\$(git_branch_name) \[$txtrst\]-> "
